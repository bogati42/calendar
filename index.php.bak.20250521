    window.changeMonth = function(year, month) {
        $('#loading').show();
        $.ajax({
            url: window.location.pathname,
            method: 'GET',
            data: { year: year, month: month },
            success: function(response) {
                const newCalendar = $(response).find('#calendarContainer').html();
